---
const { description, title, imgSrc } = Astro.props;
---

<div class="card">
  <div class="image">
    <img src={imgSrc} alt={title} />
  </div>
  <div class="texts">
    <h3 class="title">{title}</h3>
    <p>{description}</p>
  </div>
</div>

<style>
  .card {
    background: var(--color-accent);
    border-radius: 20px;
    padding: 50px 30px;
    height: 100%;
    transition: transform 0.3s ease;
  }
  .image {
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .image img {
    max-width: 60px;
    height: auto;
  }
  .texts {
    display: flex;
    flex-direction: column;
    gap: 6px;
    margin-top: 40px;
  }

  .title {
    font-size: 18px;
    font-weight: 400;
  }
  p {
    font-size: 14px;
    color: var(--color-muted-foreground);
    margin-top: 10px;
    line-height: 1.5;
  }

  @media (max-width: 768px) {
    .card {
      padding: 30px 20px;
    }
    .image img {
      max-width: 50px;
    }
    .texts {
      margin-top: 25px;
    }
    .title {
      font-size: 16px;
    }
    p {
      font-size: 13px;
      margin-top: 6px;
    }
  }
</style>
