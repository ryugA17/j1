---
import SectionName from "../shared/SectionName.astro";
import { Image } from 'astro:assets';
import backgroundImage from '../../assets/p1.jpg';
---

<section class="flipkart-case">
  <div class="container">
    <div class="content">
      <div class="info-card">
        <h2 class="company-name">Flipkart</h2>
        <p class="description">
          Handled record-breaking traffic during the 2024 Big Billion Days event using Aerospike.
        </p>
        
        <a href="#" class="press-link">
          Read the press release 
          <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M8 1L15 8L8 15" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M15 8H1" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </a>
        
        <div class="stats-container">
          <div class="stat">
            <h3>300+ development teams</h3>
            <p>building with Aerospike</p>
          </div>
          
          <div class="stat">
            <h3>25x traffic surge</h3>
            <p>for interactive shopping experiences</p>
          </div>
          
          <div class="stat">
            <h3>96M+</h3>
            <p>transactions per second</p>
          </div>
        </div>
      </div>
      
      <Image src={backgroundImage} alt="Flipkart customer with gift" class="background-image" />
    </div>
  </div>
</section>

<style>
  .flipkart-case {
    padding: 0;
    background-color: var(--color-background, #0D1117);
    color: var(--color-white, #ffffff);
    position: relative;
    width: 1440px;
    height: 875px;
    margin: 0 auto;
    overflow: hidden;
  }
  
  .container {
    width: 100%;
    height: 100%;
    padding: 0;
    position: relative;
    z-index: 2;
  }
  
  .content {
    position: relative;
    width: 100%;
    height: 100%;
  }
  
  .info-card {
    background-color: rgba(10, 18, 31, 0.9);
    border-radius: 24px;
    padding-top: 50px;
    padding-right: 30px;
    padding-bottom: 40px;
    padding-left: 30px;
    width: 429px;
    height: 561px;
    position: absolute;
    top: 100px;
    left: 60px;
    z-index: 2;
    backdrop-filter: blur(5px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
    display: flex;
    flex-direction: column;
    gap: 10px;
  }
  
  .company-name {
    font-size: 48px;
    font-weight: 700;
    margin-bottom: 16px;
    font-style: italic;
  }
  
  .description {
    font-size: 18px;
    line-height: 1.5;
    margin-bottom: 20px;
    color: rgba(255, 255, 255, 0.8);
  }
  
  .press-link {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    color: var(--color-white, #ffffff);
    text-decoration: none;
    font-weight: 500;
    margin-bottom: 25px;
    transition: color 0.2s ease;
  }
  
  .press-link:hover {
    color: var(--color-accent, #4dabf7);
  }
  
  .stats-container {
    background-color: #f8e71c;
    border-radius: 12px;
    padding: 24px;
    color: #000000;
    margin-top: auto;
  }
  
  .stat {
    margin-bottom: 16px;
  }
  
  .stat:last-child {
    margin-bottom: 0;
  }
  
  .stat h3 {
    font-size: 22px;
    font-weight: 700;
    margin-bottom: 4px;
  }
  
  .stat p {
    font-size: 16px;
    opacity: 0.8;
  }
  
  .background-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }
  
  @media (max-width: 1440px) {
    .flipkart-case {
      width: 100%;
      height: auto;
      min-height: 875px;
    }
  }
  
  @media (max-width: 768px) {
    .flipkart-case {
      min-height: auto;
      height: auto;
      padding-top: 20px;
      padding-bottom: 20px;
    }

    .container {
        height: auto;
        padding-left: 20px;
        padding-right: 20px;
    }

    .content {
      position: static;
      display: flex;
      flex-direction: column;
      height: auto;
      gap: 24px;
    }

    .background-image {
      order: 1;
      position: static;
      width: 100%;
      height: 300px;
      object-fit: cover;
      border-radius: 16px;
    }
    
    .info-card {
      order: 2;
      position: static;
      top: auto;
      left: auto;
      transform: none;
      width: 100%;
      height: auto;
      min-height: auto;
      margin-bottom: 0;
      padding: 24px;
    }
    
    .company-name {
      font-size: 32px;
      margin-bottom: 12px;
    }
    
    .description {
      font-size: 15px;
      margin-bottom: 16px;
    }

    .press-link {
      margin-bottom: 20px;
    }
    
    .stat h3 {
      font-size: 18px;
    }
    
    .stat p {
      font-size: 14px;
    }

    .stats-container {
      padding: 20px;
    }
  }
</style> 