---
import Button from "../shared/Button.astro";
---

<div class="sticky-background">
  <section class="yellow-section">
    <div class="content">
      <h1>Looking for a co-pilot?</h1>
      <p>Schedule 20mins with a Aerospike Field Engineer</p>
      <Button variant="secondary" className="custom-button">Schedule Call</Button>
    </div>
  </section>
</div>

<style>
  .sticky-background {
    position: sticky;
    top: 0;
    z-index: 0; /* Lowest */
    background-color: #F8F413;
    height: 100vh; /* Limit height to viewport */
    overflow: hidden; /* Prevent content from flowing outside */
  }
  
  .yellow-section {
    background: #F8F413;
    padding: 250px 0 350px; /* Increased bottom padding to 350px to account for overlap */
    position: relative;
    z-index: 1;
  }
  
  .content {
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: 28px;
    align-items: center;
    position: relative;
    z-index: 2;
    background: #F8F413;
  }
  
  :global(.custom-button) {
    background-color: #000000 !important;
    color: #ffffff !important;
    font-weight: bold;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }
  
  /* Mobile Improvements Only */
  @media (max-width: 768px) {
    .yellow-section {
      padding: 120px 0;
    }
    .content {
      gap: 20px;
      padding: 0 20px;
    }
    h1 {
      font-size: 32px;
    }
    p {
      font-size: 16px;
    }
  }
  
  @media (max-width: 480px) {
    .yellow-section {
      padding: 80px 0;
    }
    .content {
      gap: 16px;
    }
    h1 {
      font-size: 28px;
    }
  }
</style>
