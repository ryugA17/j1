---
import Button from "../shared/Button.astro";
---

<section class="yellow-section">
  <div class="content">
    <h1>Looking for a co-pilot?</h1>
    <p>Schedule 20mins with a Aerospike Field Engineer</p>
    <Button variant="secondary" className="custom-button">Schedule Call</Button>
  </div>
</section>

<style>
  .yellow-section {
    background: #F8F413;
    padding: 250px 0;
  }
  .content {
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: 28px;
    align-items: center;
  }
  :global(.custom-button) {
    background-color: #000000 !important;
    color: #ffffff !important;
    font-weight: bold;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }
  
  /* Mobile Improvements Only */
  @media (max-width: 768px) {
    .yellow-section {
      padding: 120px 0;
    }
    .content {
      gap: 20px;
      padding: 0 20px;
    }
    h1 {
      font-size: 32px;
    }
    p {
      font-size: 16px;
    }
  }
  
  @media (max-width: 480px) {
    .yellow-section {
      padding: 80px 0;
    }
    .content {
      gap: 16px;
    }
    h1 {
      font-size: 28px;
    }
  }
</style>
