---
import SectionName from "../shared/SectionName.astro";
import SectionHeading from "../shared/SectionHeading.astro";
import Container from "../shared/Container.astro";
import { Image } from 'astro:assets';
import newChartImage from '../../assets/Aerospike-v-DynamoDB.png';
import atlasChartImage from '../../assets/Frame 2147204655.png';
import mediaImage from '../../assets/Media.png'; // This image contains the testimonial card
import iconStats1 from '../../assets/Frame 2147204653.png';
import iconStats2 from '../../assets/Group 10124044.png';
import iconStats3 from '../../assets/Frame 2147204652.png';
import wayfairShowcaseImage from '../../assets/g1.jpg';
import wayfairLogoImage from '../../assets/wayfair.png';
import fintechShowcaseImage from '../../assets/g2.jpg';
import adtechShowcaseImage from '../../assets/g3.jpg'; // New AdTech image
import adtechLogoImage from '../../assets/b12.png'; // New AdTech logo
// Removed dream11Logo and amitGardeImage imports as they are part of mediaImage
import OperationsExperience from './OperationsExperience.astro';
---

<section>
  <Container>
    <div class="texts">
      <SectionName>Why Aerospike Cloud</SectionName>
      <SectionHeading
        >The fully managed database that scales -without the hyperscale invoice</SectionHeading
      >
    </div>

    <!-- Original cost-comparison-layout -->
    <div class="cost-comparison-layout">
      <div class="cost-comparison-left">
        <h2>Avoid hyperscaling invoices</h2>
        <div class="text-block">
          <h3>Do more, without paying per transaction</h3>
          <p>Unlike cloud-vendor databases, Aerospike Cloud doesn't charge for transactions.</p>
        </div>
        <div class="text-block">
          <h3>Avoid hyperscale lock-in</h3>
          <p>Run on AWS or GCP today—switch clouds or choose your own data center in the future.</p>
        </div>
      </div>
      <div class="cost-comparison-right">
        <div class="comparison-card">
          <div class="card-text-content">
            <h4>Aerospike vs. DynamoDB</h4>
            <a href="#" class="report-link">Download the report &rarr;</a>
          </div>
          <div class="card-chart-area">
            <Image src={newChartImage} alt="Aerospike vs. DynamoDB cost chart" />
          </div>
        </div>
      </div>
    </div>

    <!-- New cost-comparison-layout for MongoDB Atlas -->
    <div class="cost-comparison-layout space-above">
      <div class="cost-comparison-left">
        <h2>Give yourself headroom</h2>
        <div class="text-block">
          <h3>Ship fast and plan to last</h3>
          <p>Performance holds steady as your data grows, with no latency cliffs, and no re-platforming later.</p>
        </div>
        <div class="text-block">
          <h3>Focus on features, not fire drills</h3>
          <p>Handle failovers, rebalancing, and reconfigurations automatically, with no dropped traffic, and no scrambling.</p>
        </div>
      </div>
      <div class="cost-comparison-right">
        <div class="comparison-card">
          <div class="card-text-content">
            <h4>Aerospike vs. MongoDB Atlas</h4>
            <a href="#" class="report-link">Download the whitepaper &rarr;</a>
          </div>
          <div class="card-chart-area">
            <Image src={atlasChartImage} alt="Aerospike vs. MongoDB Atlas chart" />
          </div>
        </div>
      </div>
    </div>

    <!-- Testimonial and Stats Section - Simplified Left Column -->
    <div class="testimonial-stats-layout space-above">
      <div class="testimonial-image-column">
        <Image src={mediaImage} alt="Testimonial including Dream11 showcase" class="main-media-image" />
        <!-- Removed the div.testimonial-card and its contents -->
      </div>
      <div class="stats-column">
        <h3>When billions tune in, Dream11 can't drop the ball</h3>
        <p class="stats-subtext">
          The world's largest fantasy sports platform trusts Aerospike to manage data on <span class="aws-logo">AWS</span>
        </p>
        <ul class="stats-list">
          <li class="stats-item">
            <Image src={iconStats1} alt="Data graph icon" class="stat-icon" />
            <span>35 TB added per day</span>
          </li>
          <li class="stats-item">
            <Image src={iconStats2} alt="Data transfer icon" class="stat-icon" />
            <span>Millions of tx/sec</span>
          </li>
          <li class="stats-item">
            <Image src={iconStats3} alt="Clock icon" class="stat-icon" />
            <span>Sustained sub-&lt;1ms latency</span>
          </li>
        </ul>
      </div>
    </div>

    <!-- New "USE CASES" text block, styled like TrustAndSecurity.astro .texts -->
    <div class="texts use-cases-heading-block"> 
      <SectionName>USE CASES</SectionName>
      <SectionHeading>Trusted wherever 'good enough' isn't good enough</SectionHeading>
    </div>

    <OperationsExperience />

    <!-- New Ad & Marketing Tech Section - Text Left, Image Right -->
    <div class="adtech-case-study-wrapper space-above">
      <div class="adtech-showcase-layout">
        <div class="adtech-text-column"> {/* Text on the left */}
          <p class="adtech-category">Ad & marketing tech</p>
          <h2 class="adtech-title">User profile stores</h2>
          <p class="adtech-description">
            Rely on predictable real-time reads during high-volume
            continuous writes—even as terabytes turn into petabytes.
          </p>
          
          <div class="adtech-client-box">
            <div class="adtech-client-info">
              <div class="adtech-client-logo-container">
                <Image src={adtechLogoImage} alt="AdTech Partner Logo" class="adtech-client-logo-img" />
              </div>
              <div class="adtech-client-text">
                <p>Aerospike named AWS 2024<br>AdTech partner of the year</p>
              </div>
            </div>
            <div class="adtech-client-arrow">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </div>
          </div>
        </div>
        <div class="adtech-image-column"> {/* Image on the right */}
          <div class="adtech-image-container">
             <Image src={adtechShowcaseImage} alt="Ad & marketing tech showcase" class="adtech-main-image" />
          </div>
        </div>
      </div>
    </div>
    {/* End of New Ad & Marketing Tech Section */}

    <!-- New Fintech Showcase Section - Image Left, Text Right -->
    <div class="fintech-case-study-wrapper space-above">
      <div class="fintech-showcase-layout">
        <div class="fintech-image-column"> {/* Image on the left */}
          <div class="fintech-image-container">
             <Image src={fintechShowcaseImage} alt="Fintech application showcase" class="fintech-main-image" />
          </div>
        </div>
        <div class="fintech-text-column"> {/* Text on the right */}
          <p class="fintech-category">Fintech</p>
          <h2 class="fintech-title">High-volume payments</h2>
          <p class="fintech-description">
            Combine strong consistency with unmatched infrastructure
            utilization to achieve industry-leading cost per payment.
          </p>
          
          <div class="fintech-client-box">
            <div class="fintech-client-text"> {/* Modified: No logo container */}
              <p>The largest payments app in America trusts<br>Aerospike with $1 trillion+ a year of volume.</p>
            </div>
            <div class="fintech-client-arrow">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </div>
          </div>
        </div>
      </div>
    </div>
    {/* End of New Fintech Showcase Section */}

    <!-- New Wayfair Showcase Section -->
    <div class="wayfair-case-study-wrapper space-above">
      <div class="wayfair-showcase-layout">
        <div class="wayfair-showcase-left">
          <p class="wayfair-category">Ecommerce</p>
          <h2 class="wayfair-title">High-scale ML inference</h2>
          <p class="wayfair-description">
            Retrieve large feature sets at low p99 latency to reliably 
            satisfy your upstream SLOs—without prefetching.
          </p>
          
          <div class="wayfair-client-box">
            <div class="wayfair-client-info">
              <div class="wayfair-client-logo-container">
                <Image src={wayfairLogoImage} alt="Wayfair Logo" class="wayfair-client-logo-img" />
              </div>
              <div class="wayfair-client-text">
                <p>How Wayfair powers real-time <br>product recommendations</p>
              </div>
            </div>
            <div class="wayfair-client-arrow">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </div>
          </div>
        </div>
        <div class="wayfair-showcase-right">
          <div class="wayfair-image-container">
             <Image src={wayfairShowcaseImage} alt="Wayfair website on laptop" class="wayfair-main-image" />
          </div>
        </div>
      </div>
    </div>
    <!-- End of New Wayfair Showcase Section -->

  </Container>
</section>

