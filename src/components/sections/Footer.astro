    {
      label: "Database 8",
      href: "/",
    },
    {
      label: "Cloud",
      href: "/",
    },
    {
      label: "Graph",
      href: "/",
    },
    {
      label: "Vector 8",
      href: "/",
    },
  ],
  integrations: [
    {
      label: "Streaming",
      href: "/",
    },
    {
      label: "Query",
      href: "/",
    },
    {
      label: "AI/ML",
      href: "/",
    },
  ],
  solutions: [
    {
      label: "Artificial Intelligence",
      href: "/",
    },
    {
      label: "Fraud Prevention",
      href: "/",
    },
    {
      label: "Cost Efficency",
      href: "/",
    },
    {
      label: "User Profile Store ",
      href: "/",
    },
    {
      label: "Customer 360",
      href: "/",
    },
    {
      label: "in-memory caching ",
      href: "/",
    },
    {
      label: "Identify graph",
      href: "/",
    },
  ],
  company: [
    {
      label: "About",
      href: "/",
    },
    {
      label: "Partners",
      href: "/",
    },
    {
      label: "Careers",
      href: "/",
    },
    {
      label: "Leadership ",
      href: "/",
    },
    {
      label: "Newsroom",
      href: "/",
    },
  ],
